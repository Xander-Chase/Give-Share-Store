<style>
    .mandatory {
        color: red;
    }
</style>

<body>
    <div class="container mt-5">
        <h2>Add New Listing</h2>
        <p> Fields marked with <span class="mandatory">*</span> are mandatory.</p>
        <form action="/submitListing" method="post" enctype="multipart/form-data" class="mt-4">

            <!-- Product Images Input -->
            <div class="mb-3">
                <label for="photo" class="form-label">Product Images <span class="mandatory">*</span> </label>
                <input type="file" class="form-control" id="photo" name="photo" required multiple>
            </div>

            <!-- Product Videos Input -->
            <div class="mb-3">
                <label for="video" class="form-label">Product Videos</label>
                <input type="file" class="form-control" id="video" name="video" multiple>
            </div>


            <!-- Item Title Input -->
            <div class="mb-3">
                <label for="itemTitle" class="form-label">Item Title <span class="mandatory">*</span> </label>
                <input type="text" class="form-control" id="itemTitle" name="item_title" required>
            </div>
            
            <!-- Item Price Input -->
            <div class="mb-3">
                <label for="itemPrice" class="form-label">Item Price <span class="mandatory">*</span> </label>
                <input type="number" class="form-control" id="itemPrice" name="item_price" step="0.01" required>
            </div>
            
            <!-- Detailed Description Input -->
            <div class="mb-3">
                <label for="itemDescription" class="form-label">Detailed Description</label>
                <textarea class="form-control" id="itemDescription" name="item_detailed_description" rows="3"></textarea>
            </div>
            
            <!-- Estimated Shipping Cost Input -->
            <div class="mb-3">
                <label for="shippingCost" class="form-label">Estimated Shipping Cost</label>
                <input type="number" class="form-control" id="shippingCost" name="item_estimatedShippingCost" step="0.01">
            </div>
            
            <!-- Featured Item Checkbox -->
            <div class="mb-3 form-check">
                <input type="hidden" name="isFeatureItem" value="false">
                <input type="checkbox" class="form-check-input" id="featureItem" name="isFeatureItem" value="true">
                <label class="form-check-label" for="featureItem">Featured Item?</label>
            </div>
            
            <!-- Quantity Input -->
            <div class="mb-3">
                <label for="itemQuantity" class="form-label">Quantity <span class="mandatory">*</span> </label>
                <input type="number" class="form-control" id="itemQuantity" name="item_quantity" required>
            </div>

            <!-- Category Selection -->
            <div class="mb-3">
                <label for="itemCategory" class="form-label">Category <span class="mandatory">*</span> </label>
                <select class="form-select" id="itemCategory" name="item_category" multiple aria-label="multiple select example">
                    <option value="tools">Tools</option>
                    <option value="furniture">Furniture</option>
                    <option value="household">Household</option>
                    <option value="garden">Garden</option>
                    <option value="appliances">Appliances</option>
                </select>
            </div>

            <!-- Submit Button -->
            <button type="submit" class="btn btn-primary">Submit Listing</button>
            <br>
            <br>

        </form>
    </div>
</body>
