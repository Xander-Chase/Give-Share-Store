<%- include("metadata") %>
<html lang="en">
    <head>
        <style>

            /* Smallest */
            @media only screen and (min-width:415px){
                #loginModal{
                    justify-content: center;
                }
            }
            @media only screen and (max-width: 853px) {
                #hanging-icons
                {
                    height: 100%;
                }

                #loginModal
                {
                    font-size: 12px;
                }
            }

            /* Medium */
            @media only screen and (min-width: 854px) and (max-width: 1199px) {
                #hanging-icons
                {
                    height: 100%;
                }

                #loginModal
                {
                    font-size: 16px;
                }
            }

            /* Biggest */
            @media only screen and (min-width: 1200px)
            {
                #hanging-icons
                {
                    height: 100%;
                }

                #loginModal
                {
                    font-size: 22px;
                }
            }


            /* Rest apply */
            #hanging-icons
            {
                background-image: url("/img/landingPage/banner/giveandshareBanner.png");
                background-position: center;
                background-repeat: no-repeat;
                background-size: cover;


                background-position-x: center;
                background-position-y: bottom;
            }
            body, html
            {
                height: 100%;
            }
           .modal-content.rounded-4.shadow.login-info-box{
            text-align: center;
           }
           #container-for-login-box{
            display: flex;
            justify-content: center;
            align-items: center;
           }
           #login-box{
            margin-top: 20vh;
           }
           .modal-header {
            display: flex;
            justify-content: center; /* Center horizontally */
            align-items: center; /* Center vertically if needed */
            text-align: center; /* Center text inside the header */
            }
            h1 {
            margin: 0; /* Remove default margins to avoid misalignment */
            }
            .modal-title.heading{
                font-size: 2rem;
            }
            .login-btn{
                font-size: 1.5rem;
            }
            .desc{
                font-size: 1.33rem;
            }
        </style>
    </head>
    <div id="hanging-icons">
        <div class="modal modal-sheet position-static d-block  p-4 py-md-5" role="dialog" id="loginModal">
            <div class="modal-dialog" role="document">
                <div id="container-for-login-box">
                    <div class="modal-content rounded-4 shadow login-info-box" id="login-box">
                        <div class="modal-header border-bottom-0">
                         <h1 class="modal-title heading">Welcome to the Login Portal</h1>
                        </div>
                        <div class="modal-body py-0 desc">
                            You may log in to the Vintage Garage as a user or as a moderator!
                        </div>
                        <div class="modal-footer flex-column align-items-stretch w-100 gap-2 pb-3 border-top-0">
                            <a href="/adminLogIn" class="btn btn-primary login-btn">
                                <svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" fill="currentColor" class="bi bi-tools" viewBox="0 0 16 16">
