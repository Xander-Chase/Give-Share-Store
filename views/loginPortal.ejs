<%- include("metadata") %>
<html lang="en">
    <head>
        <style>

            /* Smallest */
            @media only screen and (max-width: 853px) {
                #hanging-icons
                {
                    height: 100%;
                }

                #loginModal
                {
                    font-size: 12px;
                }
            }

            /* Medium */
            @media only screen and (min-width: 854px) and (max-width: 1199px) {
                #hanging-icons
                {
                    height: 100%;
                }

                #loginModal
                {
                    font-size: 16px;
                }
            }

            /* Biggest */
            @media only screen and (min-width: 1200px)
            {
                #hanging-icons
                {
                    height: 100%;
                }

                #loginModal
                {
                    font-size: 22px;
                }
            }


            /* Rest apply */
            #hanging-icons
            {
                background-image: url("/img/landingPage/banner/giveandshareBanner.png");
                background-position: center;
                background-repeat: no-repeat;
                background-size: cover;


                background-position-x: center;
                background-position-y: bottom;
            }
            body, html
            {
                height: 100%;
            }
        </style>
    </head>
