<head>
    <style>
        .text-main {
            font-size: 18pt;
            font-weight: 600;
            color: white;
        }

        .product-title {
            font-size: 32pt;
            font-weight: 700;
            letter-spacing: 2pt;
        }

        .featured-product-button {
            width: 35vw;
            height: 8vh;
            font-size: 18pt;
        }

        .banner-item {
            width: 90vw;
            padding: 5rem;
            height: 40rem;
            background-color: rgba(132, 164, 154, 0.5);
            backdrop-filter: blur(10px);
            border-radius: 2%;
        }

        .banner-column {
            padding-left: 1rem;
            padding-right: 1rem;
            height: 31rem;
        }

        .featured-product-img {
            max-width: 45vw;
            max-height: 70vh;
        }

        .img-container {
            width: 40vw;
            height: 65vh;
            overflow: hidden;
            border-radius: 2%;
        }

        @media only screen and (min-width: 768px) and (max-width: 992px) {
            .text-main {
                font-size: 16pt;
            }

            .featured-product-button {
                font-size: 16pt;
            }

            .featured-product-img {
                max-width: 45vw;
                max-height: 50vh;
            }

            .img-container {
                height: 60vh;
            }
        }

        @media only screen and (min-width: 576px) and (max-width: 767px) {
            .banner-item {
                padding: 1rem;
            }

            .banner-column {
                padding-left: 0.5rem;
                padding-right: 0.5rem;
                height: 15rem;
            }

            .text-main {
                font-size: 14pt;
            }

            .product-title {
                font-size: 28pt;
            }

            .featured-product-button {
                width: 65vw;
                font-size: 16pt;
            }

            p.text-main {
                margin-bottom: 0;
            }

            .featured-product-img {
                max-width: 60vw;
                max-height: 30vh;
            }

            .img-container {
                width: 50vw;
                height: 24vh;
            }
        }

        @media only screen and (max-width: 576px) {
            .banner-item {
                padding: 1rem;
                height: 30rem;
                max-width: 80vw;
            }

            .banner-column {
                padding-left: 0.3rem;
                padding-right: 0.3rem;
                height: 15rem;
            }

            .image-column {
                height: 10rem;
            }

            .img-container {
                height: 20vh;
                width: 60vw;
            }

            .featured-product-img {
                max-width: 60vw;
                max-height: 25vh;
            }

            .text-main {
                font-size: 12pt;
            }

            .product-title {
                font-size: 20pt;
                letter-spacing: 1pt;
            }

            p.text-main {
                margin-bottom: 0;
            }

            .featured-product-button {
                font-size: 14pt;
                width: 80vw;
                height: 5vh;
            }
        }
    </style>
</head>
<div class="carousel-item <%= activeStatus %>"
    style="width: 100%; height: 40rem; background-image: url('<%= source %>'); background-repeat: no-repeat; background-size: cover">

    <div class="container-fluid banner-item">
        <div class="row">
            <div class="d-flex col-md-6 align-items-center justify-content-center banner-column image-column">
                <div class="img-container d-flex align-items-center justify-content-center">
                    <a href="/product-info/<%= product_link %>">
                        <img src="<%= product_img %>" alt="product image" class="featured-product-img">
                    </a>
                </div>
            </div>
            <div class="col-md-6 banner-column">
                <p class="text-main">
                    <span class="product-title"><%= product_title %></span><br><br>
                    $<%= formatAmount(product_price) %><br>
                    <%= product_description %><br>
                    <br>
                    <div class="d-flex justify-content-center align-items-center">
                        <a class="btn btn-primary featured-product-button d-flex align-items-center justify-content-center"
                            href="/product-info/<%= product_link %>">
                            View Item
                        </a>
                    </div>
                </p>
            </div>
        </div>
    </div>
</div>