<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Previous Listings</title>
    <link rel="stylesheet" href="/css/styles.css">
    <style>
        .product-img {
            max-height: 30vh;
            overflow: hidden;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h2>Previous Listings</h2>
        <br>
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
            <% listings.forEach(function(listing) { %>
                <div class="col">
                    <div class="card shadow-sm">
                        <% if(listing.product_img_URL && listing.product_img_URL.length > 0) { %>
                            <div class="d-flex product-img align-items-center justify-content-center">
                                <img src="<%= listing.product_img_URL[0] %>" class="bd-placeholder-img card-img-top" alt="..." style="border: solid; border-width: 2px; border-color: lightgray; max-width: 25vw;">
                            </div>
                        <% } else { %>
                            <svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false">
                                <title>Placeholder</title>
                                <rect width="100%" height="100%" fill="#55595c"/>
                                <text x="50%" y="50%" fill="#eceeef" dy=".3em">Thumbnail</text>
                            </svg>
                        <% } %>
                        <div class="card-body">
                            <p class="card-text"><%= listing.item_title %></p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <form action="/admin/relist/<%= listing._id %>" method="post">
                                        <button type="submit" class="btn btn-sm btn-outline-secondary">Re-List</button>
                                    </form>
                                </div>
                                <small class="text-muted">Sold</small>
                            </div>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
        <% if (listings.length === 0) { %>
            <p>No previous listings found.</p>
        <% } %>
    </div>
</body>
</html>
